<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:background="@drawable/bg_green">

    <include
        android:id="@+id/include1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/header_bar" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btnSpelling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/horse_button_xml"
                android:gravity="left|center_vertical"
                android:minHeight="70dp"
                android:onClick="onSpelling"
                android:paddingLeft="30dp"
                android:text="Spelling : Injury"
                android:textColor="#fff"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnTraining"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/horse_button_xml"
                android:gravity="left|center_vertical"
                android:minHeight="70dp"
                android:onClick="onTraining"
                android:paddingLeft="30dp"
                android:text="Training"
                android:textColor="#fff"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnRacing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/horse_button_xml"
                android:gravity="left|center_vertical"
                android:minHeight="70dp"
                android:onClick="onRacing"
                android:paddingLeft="30dp"
                android:text="Racing"
                android:textColor="#fff"
                android:textStyle="bold" />

            <Button
                android:id="@+id/Button03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/horse_button_xml"
                android:gravity="left|center_vertical"
                android:paddingLeft="30dp"
                android:text="Preview Reports"
                android:textColor="#fff"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>