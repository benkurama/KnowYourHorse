<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_green"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/user_header"
        android:clickable="true" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:onClick="onBack"
            android:src="@drawable/button_back_xml" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:paddingTop="5dp" >

            <Button
                android:id="@+id/btnProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/user_button_xml"
                android:drawableLeft="@drawable/user_icon_01"
                android:gravity="left|center_vertical"
                android:onClick="onProf"
                android:paddingLeft="30dp"
                android:text="    Account Profile"
                android:textColor="#000"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnInbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/user_button_xml"
                android:drawableLeft="@drawable/user_icon_02"
                android:gravity="left|center_vertical"
                android:onClick="onHorse"
                android:paddingLeft="30dp"
                android:text="    Horse"
                android:textColor="#000"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/user_button_xml"
                android:drawableLeft="@drawable/user_icon_03"
                android:gravity="left|center_vertical"
                android:onClick="onSettings"
                android:paddingLeft="30dp"
                android:text="    Settings"
                android:textColor="#000"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/user_button_xml"
                android:drawableLeft="@drawable/user_icon_04"
                android:gravity="left|center_vertical"
                android:onClick="onLogin"
                android:paddingLeft="30dp"
                android:text="    Login"
                android:textColor="#000"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>